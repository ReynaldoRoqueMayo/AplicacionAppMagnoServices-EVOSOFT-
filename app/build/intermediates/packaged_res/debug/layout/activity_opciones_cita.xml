<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesCita"
    android:gravity="center"

    android:background="@drawable/magnopng"

    android:backgroundTint="#9740197E"
    android:backgroundTintMode="src_over"
    >


    <Button
        android:id="@+id/btnCrearCitaOptions"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_button_one"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="Crear Cita"
        android:textSize="15dp"


        android:textStyle="bold"


        >

    </Button>





    <Button
        android:layout_below="@+id/btnCrearCitaOptions"
        android:id="@+id/btnVerMisCitasOptions"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textStyle="bold"

        android:text="MIS CITAS"
        android:fontFamily="@font/holtwood_one_sc"

        android:outlineAmbientShadowColor="@color/black"
        android:textSize="15dp"
        android:background="@drawable/bg_button_one"


        >


    </Button>


</RelativeLayout>