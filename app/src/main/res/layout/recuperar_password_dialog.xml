<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF6D00"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/ic_baseline_key_24"
        >


    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el correo de su cuenta:"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="11dp"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Se le enviara un mensaje al correo para cambiar la contraseÃ±a"
            android:textStyle="bold"

            android:textSize="16sp"
            android:textColor="#0091EA"
            android:gravity="center"
            android:layout_margin="11dp"
            >

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtRecuperarPass"
                android:hint="ejemplo@gmail.com"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                >


            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:padding="4dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/btnOkCancelarRecuperar"

                android:textSize="18sp"

                android:layout_marginRight="10dp"

                android:text="Cancelar"

                >


            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/btnOkRecuperar"

                android:textSize="18sp"

                android:enabled="false"


                android:text="Ok"

                >


            </Button>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>